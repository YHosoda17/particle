<body>

    <div class="container">
        <h1>あなたの誕生日情報検索</h1>

        <label for="birthdate">生年月日を入力してください:</label>
        <input type="date" id="birthdate">
        <button onclick="displayBirthdayInfo()">情報を表示</button>

        <div id="result">
            <p>ここに結果が表示されます。</p>
        </div>
    </div>

    <script>
        // ----------------------------------------------------
        // データの定義 (例: 1月1日のみ)
        // ----------------------------------------------------
        const birthdayData = {
            '1-1': { 
                flower: 'スノードロップ', 
                color: 'ルビーレッド', 
                colorCode: '#E0115F', 
                stone: 'ガーネット' 
            },
            // ここに他の日付のデータを追加していきます
            // '1-2': { flower: '...'},
            // '2-15': { flower: '...'},
            // ...
        };

        // ----------------------------------------------------
        // メイン処理
        // ----------------------------------------------------
        function displayBirthdayInfo() {
            const dateInput = document.getElementById('birthdate').value;
            const resultDiv = document.getElementById('result');

            // 1. 入力チェック
            if (!dateInput) {
                resultDiv.innerHTML = '<p class="highlight">生年月日を入力してください。</p>';
                return;
            }

            // 2. 日付を「月-日」形式に変換
            // 例: "2024-01-01" -> "1-1"
            const dateParts = dateInput.split('-');
            const month = parseInt(dateParts[1], 10);
            const day = parseInt(dateParts[2], 10);
            const key = `${month}-${day}`;

            // 3. データ検索
            const info = birthdayData[key];
            
            let htmlOutput = '';

            if (info) {
                // 4. データが見つかった場合
                htmlOutput = `
                    <h2>${month}月${day}日の情報</h2>
                    <p>
                        <span class="highlight">誕生花:</span> ${info.flower}
                    </p>
                    <p>
                        <span class="highlight">誕生色:</span> 
                        <span class="color-box" style="background-color: ${info.colorCode};"></span>
                        ${info.color} (${info.colorCode})
                    </p>
                    <p>
                        <span class="highlight">誕生石:</span> ${info.stone}
                    </p>
                `;
            } else {
                // 5. データが見つからない場合
                htmlOutput = `
                    <p class="highlight">申し訳ありません。${month}月${day}日のデータは現在準備中です。</p>
                `;
            }

            resultDiv.innerHTML = htmlOutput;
        }
    </script>

</body>
</html>
